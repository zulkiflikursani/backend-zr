{
  "version": 2,

  "name": "backend-node",

  "builds": [{ "src": "server.js", "use": "@vercel/node" }],

  "routes": [
    {
      "src": "/(.*)",

      "dest": "/server.js",

      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    },
    {
      "src": "/routes/(.*)",
      "dest": "/routes/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },

    {
      "src": "/controller/(.*)",
      "dest": "/controller/$1"
    }
  ],

  "redirects": [
    {
      "source": "/routes/(.*)",
      "destination": "/routes/$1"
    }
  ]
}
